<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
  <h1>Welcome to Tour-India</h1>
  <p>View popular Adventure-Tours from all over India</p>
  <a class="btn btn-lg btn-primary" href="/campground/new">Add new sites</a>
</header>
<div class="row text-center">
    <% campground.forEach(function(campground){ %>
      <div>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
          <img src=" <%= campground.image %> ">
          <div>
            <h5> <%= campground.name %> </h5>
          </div>
            <div>
              <a href="/campground/<%=campground.id%>" class="btn btn-primary ">More info</a>
            </div>
          </div>
        </div>
      
      </div>
<% }); %>
</div>

</div>
<% include ../partials/footer %>